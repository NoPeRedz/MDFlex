#!/usr/bin/make -f

export PYBUILD_NAME=mdflex

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_install:
	dh_auto_install
	# Install desktop file
	install -D -m 644 data/mdflex.desktop \
		debian/mdflex/usr/share/applications/mdflex.desktop
	# Install icons
	install -D -m 644 data/mdflex.svg \
		debian/mdflex/usr/share/icons/hicolor/scalable/apps/mdflex.svg
